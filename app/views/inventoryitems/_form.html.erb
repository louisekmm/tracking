<%= form_with model: [ product, inventoryitem ] do |form| %>

  <p>
    <%= form.label :barcode %><br>
    <%= form.text_field :barcode %>
    <% inventoryitem.errors.full_messages_for(:barcode).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.label :status %><br>
    <%= form.select :status, ['In stock', 'Reserved', 'Incoming', 'Sold' ] %>
    <% inventoryitem.errors.full_messages_for(:status).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.label :lot_number %><br>
    <%= form.text_field :lot_number %>
    <% inventoryitem.errors.full_messages_for(:lot_number).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.label :expiration_date %><br>
    <%= form.date_select :expiration_date %>
    <% inventoryitem.errors.full_messages_for(:expiration_date).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.label :size %><br>
    <%= form.text_field :size %>
    <% inventoryitem.errors.full_messages_for(:size).each do |message| %>
      <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>